<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingTop="30dp"
    android:paddingBottom="30dp">

    <ImageView
        android:id="@+id/loadSwitchImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/loadSwitchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/loadswitch_empty_text"
        android:textColor="@color/load_and_retry_text_color"
        android:visibility="gone" />

    <com.ashlikun.flatbutton.FlatButton
        android:id="@+id/loadSwitchReSet"
        android:layout_width="100dp"
        android:layout_height="32dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="@string/loadswitch_button"
        android:textColor="@color/load_and_retry_button_color"
        android:textSize="14dp"
        app:colorNormal="#00000000"
        app:colorPressed="#ffcccccc"
        app:colorRipple="#ff888888"
        app:cornerRadius="20dp"
        app:strokeColor="@color/load_and_retry_button_strokecolor"
        app:strokeWidth="0.5dp"></com.ashlikun.flatbutton.FlatButton>

</LinearLayout>