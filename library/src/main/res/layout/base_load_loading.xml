<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.ashlikun.circleprogress.CircleProgressView
        android:id="@+id/circleProgressBar"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/tvLoadMore"
        app:cpv_angleAnimationDurationMillis="@integer/circle_default_angleAnimationDuration"
        app:cpv_borderWidth="2dp"
        app:cpv_color="@color/load_and_retry_circle_color"
        app:cpv_sweepAnimationDurationMillis="@integer/circle_default_sweepAnimationDuration" />


    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="  载入中..."
        android:textColor="@color/load_and_retry_text_color"
        android:textSize="14sp" />
</LinearLayout>